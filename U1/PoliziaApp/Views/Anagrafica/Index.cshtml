@model IEnumerable<PoliziaApp.Models.Anagrafica>

<h2>Anagrafiche</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>Cognome</th>
        <th>Nome</th>
        <th>Indirizzo</th>
        <th>Città</th>
        <th>CAP</th>
        <th>Cod_Fisc</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Cognome)</td>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.Indirizzo)</td>
            <td>@Html.DisplayFor(modelItem => item.Città)</td>
            <td>@Html.DisplayFor(modelItem => item.CAP)</td>
            <td>@Html.DisplayFor(modelItem => item.Cod_Fisc)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAnagrafica">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAnagrafica">Delete</a>
            </td>
        </tr>
    }

</table>
