@model IEnumerable<PoliziaApp.Models.TotalePuntiPerTrasgressore>

<h2>Totale Punti Decurtati per Trasgressore</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Cognome)</th>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.TotalePuntiDecurtati)</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Cognome)</td>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@Html.DisplayFor(modelItem => item.TotalePuntiDecurtati)</td>
        </tr>
    }

</table>
