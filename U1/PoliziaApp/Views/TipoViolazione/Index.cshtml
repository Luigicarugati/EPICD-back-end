@model IEnumerable<PoliziaApp.Models.TipoViolazione>

<h2>Tipi di Violazioni</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>Descrizione</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Descrizione)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdViolazione">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.IdViolazione">Delete</a>
            </td>
        </tr>
    }

</table>
